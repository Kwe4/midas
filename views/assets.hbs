       <h2 class="main-title"> Assets <span> &#8358; {{totalAssets}} </span>   </h2>
        
        <div class="row">
          <div class="col-lg-12">
            <div class="users-table table-wrapper">
              <table class="posts-table">
                <thead>
                  <tr class="users-table-info">
                    <th>
                      <label class="users-table__checkbox ms-20">
                        <input type="checkbox" class="check-all"> Title
                      </label>
                    </th>
                    <th>Value &#8358;</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                {{#each allAssets}}
                  <tr>
                    <td>
                      <label class="users-table__checkbox">
                        <input type="checkbox" class="check">
                        {{title}} 
                      </label>
                    </td>
                    <td>
                      <form action="/assets/update/{{_id}}" method="post">
                      <input 
                      name="value"
                      style="text-align:center;" type="text" value="{{value}}" onchange="this.form.submit()">
                      </form>
                    </td>
                   
                    <td>
                      <span class="badge-pending">Delete
                      </span>
                      </td>
                  </tr>
                {{/each}}
                </tbody>
              </table>
            </div>
          </div>
         
        </div>